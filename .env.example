# ==============================================
# N8N Configuration
# ==============================================

# N8N Port (external:internal)
N8N_PORT=3000

# N8N Basic Authentication
N8N_BASIC_AUTH_ACTIVE=false
# N8N_BASIC_AUTH_USER=admin
# N8N_BASIC_AUTH_PASSWORD=change_me

# ==============================================
# PostgreSQL Configuration
# ==============================================

# PostgreSQL Port (external:internal)
POSTGRES_PORT=5432

# Database Credentials
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin
POSTGRES_DB=n8n_base

# Database Connection (for n8n)
DB_TYPE=postgresdb
DB_POSTGRESDB_DATABASE=n8n_base
DB_POSTGRESDB_HOST=postgres
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_USER=admin
DB_POSTGRESDB_PASSWORD=admin
DB_POSTGRESDB_SCHEMA=public

# ==============================================
# Container Names
# ==============================================

N8N_CONTAINER_NAME=ai_n8n
POSTGRES_CONTAINER_NAME=ai_postgres

# ==============================================
# Network Configuration
# ==============================================

NETWORK_NAME=ai_network_default

# ==============================================
# Resource Limits (PostgreSQL)
# ==============================================

POSTGRES_CPU_LIMIT=0.5
POSTGRES_MEMORY_LIMIT=1GB